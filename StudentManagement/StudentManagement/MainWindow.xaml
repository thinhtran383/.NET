<Window x:Class="StudentManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:StudentManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="327" Width="493">
    <Grid Background="#2b579a">
        <Grid.RowDefinitions>
            <RowDefinition Height="124*"/>
            <RowDefinition Height="187*"/>
        </Grid.RowDefinitions>
        <Label Content="Username:" Foreground ="White"  HorizontalAlignment="Left" Margin="43,10,0,0" VerticalAlignment="Top" FontSize="16" Grid.Row="1" Height="31" Width="85"/>
        <Label Content="Password:" Foreground ="White" HorizontalAlignment="Left" Margin="43,58,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.477,0.586" FontSize="16" Grid.Row="1" Height="31" Width="80"/>
        <Label Content="Welcome To" Foreground ="White" FontWeight ="Light" HorizontalAlignment="Left" Margin="43,10,0,0" VerticalAlignment="Top" FontSize="48" RenderTransformOrigin="0.377,0.317" Height="74" Width="254"/>
        <Label Content="Student Management" Foreground ="White" FontWeight="thin" HorizontalAlignment="Left" Margin="103,64,0,0" VerticalAlignment="Top" FontSize="24" RenderTransformOrigin="0.378,0.247" Height="42" Width="228"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="133,15,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="292" Grid.Row="1" Height="26"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="133,58,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="292" Grid.Row="1" Height="26"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="336,102,0,0" VerticalAlignment="Top" Width="89" Grid.Row="1" Height="27" Click="Button_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1"/>

    </Grid>
</Window>
