<Window x:Class="StudentManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:StudentManagement"
       
        mc:Ignorable="d"
        Title="MainWindow" Height="327" Width="493">
    <Grid Background="#2b579a">

        <Label Content="Username:" Foreground ="White"  HorizontalAlignment="Left" Margin="32,108,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="85"/>
        <Label Content="Password:" Foreground ="White" HorizontalAlignment="Left" Margin="34,175,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.477,0.586" FontSize="16" Height="32" Width="80"/>
        <Label Content="Welcome To" Foreground ="White" FontWeight ="Light" HorizontalAlignment="Left" Margin="13,11,0,0" VerticalAlignment="Top" FontSize="48" RenderTransformOrigin="0.377,0.317" Height="74" Width="254"/>
        <Label Content="Student Management" Foreground ="White" FontWeight="thin" HorizontalAlignment="Left" Margin="103,64,0,0" VerticalAlignment="Top" FontSize="24" RenderTransformOrigin="0.378,0.247" Height="42" Width="228"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="133,111,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="292" Height="26"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="336,222,0,0" VerticalAlignment="Top" Width="89" Height="28" Click="Button_Click" IsDefault="True"/>
        <PasswordBox  x:Name="txtPassword" HorizontalAlignment="Left" Margin="133,175,0,0" VerticalAlignment="Top" Width="292"/>
        <TextBox Name="passwordUnmark" Visibility="Hidden" HorizontalAlignment="Left" Margin="133,175,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="292"/>
        <Image HorizontalAlignment="Left" Height="0" Margin="401,191,0,0" VerticalAlignment="Top" Width="7"/>
        <TextBlock Foreground="Gray" Text="Show"  Name="showPassword" HorizontalAlignment="Left" Margin="388,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="32" MouseLeftButtonDown="showPassword_MouseLeftButtonDown"/>



    </Grid>
</Window>
